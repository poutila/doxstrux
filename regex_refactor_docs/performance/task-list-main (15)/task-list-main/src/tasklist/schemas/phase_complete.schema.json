{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/src/tasklist/schemas/phase_complete.schema.json",
  "title": "Phase Completion Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "min_schema_version",
    "phase",
    "phase_name",
    "baseline_pass_count",
    "ci_gates_passed",
    "metric_before",
    "metric_after",
    "performance_delta_median",
    "performance_delta_p95",
    "git_commit",
    "completion_date"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "min_schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "phase": {
      "type": "integer",
      "minimum": 0
    },
    "phase_name": {
      "type": "string",
      "minLength": 1
    },
    "baseline_pass_count": {
      "type": "integer",
      "minimum": 0
    },
    "ci_gates_passed": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "metric_before": {
      "type": "string",
      "minLength": 1
    },
    "metric_after": {
      "type": "string",
      "minLength": 1
    },
    "performance_delta_median": {
      "type": "number"
    },
    "performance_delta_p95": {
      "type": "number"
    },
    "git_commit": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{7,40}$"
    },
    "completion_date": {
      "type": "string",
      "format": "date-time"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
