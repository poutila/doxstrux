{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Consumer Audit Artifact Schema",
  "description": "JSON schema for consumer self-audit artifacts with provenance tracking",
  "type": "object",
  "required": [
    "repo",
    "commit",
    "tool_version",
    "timestamp",
    "hits"
  ],
  "properties": {
    "repo": {
      "type": "string",
      "description": "Repository name (org/repo format)",
      "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+$",
      "examples": ["org/consumer-repo", "security/parser"]
    },
    "branch": {
      "type": "string",
      "description": "Git branch name (optional but recommended)",
      "examples": ["main", "develop", "feature/renderer-audit"]
    },
    "commit": {
      "type": "string",
      "description": "Git commit SHA (full 40-char hex)",
      "pattern": "^[a-f0-9]{40}$",
      "examples": ["abc123def456789012345678901234567890abcd"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of audit execution",
      "format": "date-time",
      "examples": ["2025-10-18T12:00:00Z", "2025-10-18T08:30:15-05:00"]
    },
    "tool_version": {
      "type": "string",
      "description": "Version of consumer_self_audit.py tool",
      "pattern": "^consumer_self_audit/[0-9]+\\.[0-9]+$",
      "examples": ["consumer_self_audit/1.0", "consumer_self_audit/1.1"]
    },
    "uploader": {
      "type": "string",
      "description": "GitHub username or CI identity (optional provenance)",
      "examples": ["github-actions[bot]", "sre-deploy-bot", "alice@example.com"]
    },
    "uploader_ci_run_id": {
      "type": "string",
      "description": "CI run ID for provenance tracking (optional)",
      "examples": ["12345678", "github-actions-run-987654321"]
    },
    "hits": {
      "type": "array",
      "description": "List of discovered renderer-like files",
      "items": {
        "type": "object",
        "required": ["path", "pattern"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative file path in repository",
            "examples": ["src/render.py", "frontend/templates/main.html"]
          },
          "pattern": {
            "type": "string",
            "description": "Matched renderer pattern",
            "examples": ["jinja2.Template", "django.template", "render_to_string("]
          },
          "snippet": {
            "type": "string",
            "description": "Code snippet context (optional, max 400 chars)",
            "maxLength": 400
          },
          "line": {
            "type": "integer",
            "description": "Line number in file (optional)",
            "minimum": 1
          }
        }
      }
    },
    "hmac": {
      "type": "string",
      "description": "Base64-encoded HMAC-SHA256 signature (optional, for authenticity)",
      "pattern": "^[A-Za-z0-9+/]+=*$",
      "examples": ["dGVzdC1obWFjLXNpZ25hdHVyZQ=="]
    }
  },
  "additionalProperties": false
}
